${color0}${alignr 5}${cpu cpu30}% $color1${cpubar cpu30 9,157}
${color0}${cpu cpu31}% $color1${cpubar cpu31 9,157}  \
${color0}${alignr 5}${cpu cpu32}% $color1${cpubar cpu32 9,157}
${color0}${cpugraph 60,442 022B41 97d8f4 -t}
$hr
${color1}File systems:
${color2}root: ${color}${fs_used /}/${fs_size /}: ${fs_free /} free
  ${fs_used_perc /}% $color1${fs_bar 9 /}
${diskiograph_read /dev/nvme0n1p2 37,217 022B41 97d8f4 -t} ${diskiograph_write /dev/nvme0n1p2 37,217 022B41 97d8f4 -t}
${color2}home: ${color}${fs_used /home}/${fs_size /home}: ${fs_free /home} free
  ${fs_used_perc /home}% $color1${fs_bar 9 /home}
${diskiograph_read /dev/vg1/home 37,217 022B41 97d8f4 -t} ${diskiograph_write /dev/vg1/home 37,217 022B41 97d8f4 -t}
${color2} ESP: $color${fs_used /boot}/${fs_size /boot}: ${fs_free /boot} free
  ${fs_used_perc /boot}% $color1${fs_bar 9 /boot}
$hr
${color1}WiFi: ${scroll wait 14 ${color}${wireless_essid wlp5s0}} ${color1}|${color} ${addr wlp5s0}
${color1}Up:$color ${upspeed wlp5s0} ${alignr}${color1}Down:$color ${downspeed wlp5s0}
${upspeedgraph wlp5s0 37,217 022B41 97d8f4 -t} ${downspeedgraph wlp5s0 37,217 022B41 97d8f4 -t}
${color1}Ethernet: ${color}${addr enp4s0}
${color1}Up:$color ${upspeed enp4s0} ${alignr}${color1}Down:$color ${downspeed enp4s0}
${upspeedgraph enp4s0 37,217 022B41 97d8f4 -t} ${downspeedgraph enp4s0 37,217 022B41 97d8f4 -t}
$hr
${color1}Processes:$color $processes  ${color1}Running:$color $running_processes
${color}Name              PID   CPU%   MEM%
${color2}${top name 1}${top pid 1} ${top cpu 1} ${top mem 1}
${color2}${top name 2}${top pid 2} ${top cpu 2} ${top mem 2}
${color2}${top name 3}${top pid 3} ${top cpu 3} ${top mem 3}
${color2}${top name 4}${top pid 4} ${top cpu 4} ${top mem 4}
${color2}${top name 5}${top pid 5} ${top cpu 5} ${top mem 5}
]]
