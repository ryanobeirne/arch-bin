conky.config = {
	alignment = 'top_right',
	background = false,
	border_width = 1,
	cpu_avg_samples = 2,
	default_color = 'white',
	color0 = 'white',
	color1 = '#97d8f4',
	color2 = 'lightgrey',
	color3 = 'black',
	color4 = '#022B41',
	default_outline_color = 'white',
	default_shade_color = '#022B41',
	draw_shades = true,
	draw_borders = false,
	draw_graph_borders = true,
	draw_outline = false,
	use_xft = true,
	font = 'xos4 Terminus:size=14',
	gap_x = 8,
	gap_y = 60,
	maximum_width = 450,
	minimum_height = 8,
	minimum_width = 8,
	net_avg_samples = 2,
	no_buffers = true,
	out_to_console = false,
	out_to_stderr = false,
	extra_newline = false,
	own_window = true,
	own_window_class = 'Conky',
	own_window_type = 'dock',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_transparent = true,
	own_window_argb_visual = true,
	stippled_borders = 0,
	update_interval = 1.0,
	uppercase = false,
	use_spacer = 'none',
	show_graph_scale = true,
	show_graph_range = false,
	double_buffer = true,
	text_buffer_size = 256
}

conky.text = [[
${alignc}${color1}${font xos4 Terminus:style=bold:pixelsize=36}X399M TAICHI${font}

${color1}UNIX Time: ${alignr}${color0}${utime %s}
${color1}UTC: ${alignr}${color0}${utime}
$hr
${color1}Hostname: ${alignr}${color0}$nodename
${color1}Uptime:$color ${alignr}$uptime
${color1}Kernel: ${alignr}${color0}$sysname $kernel
${color1}CPU: ${alignr}${color0}${execi 1000 cat /proc/cpuinfo | grep 'model name' | sed -e 's/model name.*: //'| uniq | cut -c 1-27}
${color1}GPU: ${scroll wait 33 ${color0}${execi 1000 lspci | grep VGA | sed 's/.*: //; s/^/+ /'}}
$hr
${color1}RAM Usage:$color $mem/$memmax
  $memperc% $color1${membar 6}
${color1}Swap Usage:$color $swap/$swapmax
  $swapperc% $color1${swapbar 6}
$hr
${color1}CPU: ${color}${cpu}% ${alignc}${freq_g}GHz ${alignr}${exec ~/bin/cputemp.sh}
${color0}${cpu cpu1}% $color1${cpubar cpu1 9,157}  \
${color0}${alignr 5}${cpu cpu2}% $color1${cpubar cpu2 9,157}
${color0}${cpu cpu3}% $color1${cpubar cpu3 9,157}  \
